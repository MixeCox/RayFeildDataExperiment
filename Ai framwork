import json
import csv
import os
import sys
from pathlib import Path
from typing import Optional
from openai import OpenAI


class EnergyStatsAssistant:
    def __init__(self, api_key: Optional[str] = None):
        """Initialize the assistant with OpenAI API key."""
        self.api_key = api_key or os.getenv('OPENAI_API_KEY')
        if not self.api_key:
            raise ValueError("OpenAI API key not found. Set OPENAI_API_KEY environment variable or pass it directly.")
        
        self.client = OpenAI(api_key=self.api_key)
        self.assistant = None
        self.data_file = None

    def csv_to_json(self, csv_file_path: str, json_file_path: str) -> bool:
        """Convert CSV to JSON with error handling."""
        try:
            if not Path(csv_file_path).exists():
                print(f"âŒ CSV file not found: {csv_file_path}")
                return False

            data = []
            with open(csv_file_path, mode='r', encoding='utf-8') as csv_file:
                csv_reader = csv.DictReader(csv_file)
                for row_num, row in enumerate(csv_reader, 1):
                    if row:  # Skip empty rows
                        data.append(row)
                
                if not data:
                    print("âŒ CSV file is empty or has no valid data")
                    return False

            with open(json_file_path, mode='w', encoding='utf-8') as json_file:
                json.dump(data, json_file, indent=2)
            
            print(f"âœ… Successfully converted {len(data)} rows to JSON")
            return True

        except FileNotFoundError:
            print(f"âŒ File not found: {csv_file_path}")
            return False
        except PermissionError:
            print(f"âŒ Permission denied accessing file: {csv_file_path}")
            return False
        except Exception as e:
            print(f"âŒ Error converting CSV to JSON: {str(e)}")
            return False

    def upload_data_file(self, json_file_path: str) -> bool:
        """Upload JSON file to OpenAI with error handling."""
        try:
            if not Path(json_file_path).exists():
                print(f"âŒ JSON file not found: {json_file_path}")
                return False

            with open(json_file_path, "rb") as open_file:
                self.data_file = self.client.files.create(
                    file=open_file,
                    purpose='assistants'
                )
            
            print(f"âœ… File uploaded successfully (ID: {self.data_file.id})")
            return True

        except Exception as e:
            print(f"âŒ Error uploading file: {str(e)}")
            return False

    def create_assistant(self, name: str = "Energy Stats Assistant") -> bool:
        """Create OpenAI assistant with error handling."""
        try:
            self.assistant = self.client.beta.assistants.create(
                name=name,
                instructions="""You are an expert energy data analyst. Help users understand their energy statistics by:
                1. Providing clear, accurate answers about the data
                2. Highlighting key insights and trends
                3. Explaining technical terms in simple language
                4. Offering actionable recommendations when appropriate""",
                model="gpt-4o-mini",  # Using newer, more cost-effective model
                tools=[{"type": "file_search"}]
            )
            
            print(f"âœ… Assistant created successfully (ID: {self.assistant.id})")
            return True

        except Exception as e:
            print(f"âŒ Error creating assistant: {str(e)}")
            return False

    def query_data(self, prompt: str) -> Optional[str]:
        """Query the assistant with error handling and better response formatting."""
        if not self.assistant or not self.data_file:
            print("âŒ Assistant or data file not initialized")
            return None

        try:
            # Create thread with the user's question
            thread = self.client.beta.threads.create(
                messages=[
                    {
                        "role": "user",
                        "content": prompt,
                        "attachments": [
                            {"file_id": self.data_file.id, "tools": [{"type": "file_search"}]}
                        ]
                    }
                ]
            )

            # Run the assistant
            run = self.client.beta.threads.runs.create_and_poll(
                thread_id=thread.id,
                assistant_id=self.assistant.id,
                timeout=60  # 60 second timeout
            )

            if run.status == 'completed':
                messages = self.client.beta.threads.messages.list(thread_id=thread.id)
                assistant_response = messages.data[0].content[0].text.value
                
                print("\n" + "="*60)
                print(f"ğŸ¤– Assistant Response:")
                print("="*60)
                print(assistant_response)
                print("="*60 + "\n")
                
                return assistant_response

            else:
                print(f"âŒ Run failed with status: {run.status}")
                return None

        except Exception as e:
            print(f"âŒ Error querying assistant: {str(e)}")
            return None

    def cleanup(self):
        """Clean up resources."""
        try:
            if self.data_file:
                self.client.files.delete(self.data_file.id)
                print("âœ… Data file cleaned up")
            if self.assistant:
                self.client.beta.assistants.delete(self.assistant.id)
                print("âœ… Assistant cleaned up")
        except Exception as e:
            print(f"âš ï¸ Error during cleanup: {str(e)}")


def main():
    """Main function with improved user experience."""
    print("ğŸ”‹ Energy Stats Assistant")
    print("=" * 40)
    
    # Get file path from user
    csv_file_path = input("ğŸ“ Enter CSV file path (or press Enter for 'dataset.csv'): ").strip()
    if not csv_file_path:
        csv_file_path = "dataset.csv"
    
    json_file_path = csv_file_path.rsplit('.', 1)[0] + ".json"
    
    try:
        # Initialize assistant
        assistant = EnergyStatsAssistant()
        
        # Convert CSV to JSON
        print(f"\nğŸ“Š Converting {csv_file_path} to JSON...")
        if not assistant.csv_to_json(csv_file_path, json_file_path):
            return
        
        # Upload data file
        print("ğŸ“¤ Uploading data to OpenAI...")
        if not assistant.upload_data_file(json_file_path):
            return
        
        # Create assistant
        print("ğŸ¤– Creating AI assistant...")
        if not assistant.create_assistant():
            return
        
        print("\nâœ¨ Setup complete! You can now ask questions about your energy data.")
        print("ğŸ’¡ Try questions like:")
        print("   â€¢ What's the average energy consumption?")
        print("   â€¢ Show me the highest usage periods")
        print("   â€¢ What trends do you see in the data?")
        print("   â€¢ Type 'quit' to exit\n")
        
        # Interactive query loop
        while True:
            try:
                prompt = input("â“ Your question: ").strip()
                
                if prompt.lower() in ['quit', 'exit', 'q']:
                    break
                
                if not prompt:
                    print("âš ï¸ Please enter a question")
                    continue
                
                print("ğŸ” Analyzing your data...")
                assistant.query_data(prompt)
                
            except KeyboardInterrupt:
                print("\n\nğŸ‘‹ Goodbye!")
                break
    
    except ValueError as e:
        print(f"âŒ Configuration error: {e}")
        print("ğŸ’¡ Set your OpenAI API key as an environment variable:")
        print("   export OPENAI_API_KEY='your-api-key-here'")
    except Exception as e:
        print(f"âŒ Unexpected error: {e}")
    finally:
        # Cleanup
        if 'assistant' in locals():
            print("\nğŸ§¹ Cleaning up...")
            assistant.cleanup()
        
        # Clean up local JSON file
        try:
            if Path(json_file_path).exists():
                os.remove(json_file_path)
                print("âœ… Local JSON file cleaned up")
        except Exception as e:
            print(f"âš ï¸ Could not remove JSON file: {e}")


if __name__ == "__main__":
    main()
